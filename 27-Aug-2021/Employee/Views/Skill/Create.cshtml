@{
    ViewData["Title"] = "Add Skill";
}
@model Skill

<div class="row justify-content-center">
    <div class="col-auto">
        <h3>Add Skill</h3>
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-6 col-sm-4">
        <p class="text-danger text-center">
            @Html.Label("", Convert.ToString((string)ViewBag.Duplicate))
        </p>
    </div>
</div>

<form method="post" asp-action="Create">

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="departmentname" class="col-form-label" asp-for="SkillName"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="departmentname" class="form-control" asp-for="SkillName">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="SkillName" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-end">
        <div class="col-auto">
            <input type="submit" class="btn btn-info">
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
</form>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}