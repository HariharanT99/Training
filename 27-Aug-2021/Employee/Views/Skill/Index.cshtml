@{
    ViewData["Title"] = "Skills";
}
@model IEnumerable<Skill>

<div class="row justify-content-end">
    <div class="col-4 col-sm-4">
        <h2>Skill Details</h2>
    </div>
    <div class="col-2 col-sm-6">
    </div>
    <div class="col-4 col-sm-2">
        <a class="btn btn-primary text-white" asp-action="Create"><i class="fas fa-plus"></i> Add Skill</a>
    </div>
</div>


<div class="row justify-content-center mt-3">
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col" width="30%">Skill Id</th>
                    <th scope="col" width="30%">Skill</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in Model)
                {
                <tr>
                    <td>@skill.SkillId</td>
                    <td>@skill.SkillName</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@skill.SkillId" class="btn btn-warning ml-3"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@skill.SkillId" class="btn btn-danger ml-3"
                           onclick="return confirm('Are you Sure to delete the book')"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>