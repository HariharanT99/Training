@{
    ViewData["Tilte"] = "CreateEmployee";
}

@model Employee

<div class="row justify-content-center">
    <div class="col-auto">
        <h3>Employee Form</h3>
    </div>
</div>


<form method="post" asp-action="Create">

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="name" class="col-form-label" asp-for="Name"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="name" class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="designation" class="col-form-label" asp-for="Designation"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="designation" class="form-control" asp-for="Designation">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Designation" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="departmentid" class="col-form-label" asp-for="DepartmentId"></label>
        </div>
        <div class="col-6 col-sm-4">
            <select asp-for="DepartmentId" asp-items="@ViewBag.deptIdDropdown" class="form-control">
                <option selected="">--Select--</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>


    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="hiredate" class="col-form-label" asp-for="HireDate"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="date" id="hiredate" class="form-control" asp-for="HireDate">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="status" class="col-form-label" asp-for="StatusActive"></label>
        </div>
        <div class="col-6 col-sm-4">
            <select asp-for="StatusActive" class="form-control">
                <option selected="">True</option>
            </select>
            <span asp-validation-for="StatusActive" class="text-danger"></span>
        </div>
    </div>


    <div class="row g-3 justify-content-center mt-3 align-items-end">
        <div class="col-auto">
            <input type="submit" class="btn btn-info">
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
