@{
    ViewData["Title"] = "Create";
}

@model Customer

<form method="post" asp-action="AddCustomer">
    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="name" class="col-form-label" asp-for="Name"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="name" class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="address" class="col-form-label" asp-for="Address"></label>
        </div>
        <div class="col-6 col-sm-4">
            <textarea type="text" id="address" class="form-control" asp-for="Address"></textarea>
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="age" class="col-form-label" asp-for="Age"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="age" class="form-control" asp-for="Age">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="age" class="col-form-label" asp-for="Gender"></label>
        </div>
        <div class="col-6 col-sm-4">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender" name="gender" id="male" value="Male">
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender" name="gender" id="female" value="Female">
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>


    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="balance" class="col-form-label" asp-for="OpeningBalance"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="balance" class="form-control" asp-for="OpeningBalance">
        </div>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-end">
        <div class="col-auto">
            <input type="submit" class="btn btn-info">
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
