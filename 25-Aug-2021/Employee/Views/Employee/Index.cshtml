@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Employee>


<div class="row justify-content-end">
    <div class="col-4 col-sm-4">
        <h2>Employee Details</h2>
    </div>
    <div class="col-2 col-sm-6">
    </div>
    <div class="col-4 col-sm-2">
        <a class="btn btn-primary text-white" asp-action="Create"><i class="fas fa-plus"></i> Add Employee</a>
    </div>
</div>


<div class="row justify-content-center mt-3">
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col" width="10%">EmployeeId</th>
                    <th scope="col" width="20%">Name</th>
                    <th scope="col" width="10%">Designation</th>
                    <th scope="col" width="10%">DepartmentId</th>
                    <th scope="col" width="10%">HireDate</th>
                    <th scope="col" width="10%">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Name</td>
                    <td>@employee.Designation</td>
                    <td>@employee.DepartmentId</td>
                    <td>@employee.HireDate.ToShortDateString()</td>
                    <td><a asp-action="Status" asp-route-id="@employee.EmployeeId" class="btn btn-info">Remove</a></td>
                    <td width="20%">
                        <a asp-action="Update" asp-route-id="@employee.EmployeeId" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger ml-3"
                           onclick="return confirm('Are you Sure to delete the book')"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
