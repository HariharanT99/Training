@{
    ViewBag.Title = "Create Employee";
}

@model DAL.ViewModel.CreateEmployeeViewModel


<div class="row justify-content-center">
    <div class="col-8 col-sm-6">
        <h1 class="text-center">Registration Form</h1>
    </div>
</div>

<div class="container-fluid justify-content-center offset-sm-2">
    <form method="post" asp-action="CreateEmployee">

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="Email"></label>
            </div>
            <div class="col-8 col-sm-6">
                <input type="email" id="email" class="form-control" asp-for="Email">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="Password"></label>
            </div>
            <div class="col-8 col-sm-6">
                <input type="password" id="password" class="form-control" asp-for="Password">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-8 col-sm-6">
                <input type="password" id="confirmpass" class="form-control" asp-for="ConfirmPassword">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-8 col-sm-6">
                <input type="text" class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="Gender"></label>
            </div>
            <div class="col-8 col-sm-6">
                <select class="form-select" aria-label="Default select example"  asp-for="Gender">
                    <option value="male" selected>Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="DateOfBirth"></label>
            </div>
            <div class="col-8 col-sm-6">
                <input type="date" class="form-control" asp-for="DateOfBirth">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="DateOfBirth"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="Address"></label>
            </div>
            <div class="col-8 col-sm-6">
                <textarea class="form-control" asp-for="Address"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-sm-2">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
        </div>

        <div class="row g-3 align-items-center justify-content-end mt-3">
            <div class="col-8 col-sm-4">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    </form>
</div>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}