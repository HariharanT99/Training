<link href="~/css/Role.css" rel="stylesheet" />
@{
    ViewBag.Title = "Edit Role";
}

@model DAL.ViewModel.EditRoleViewModel


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8">
            <h1>Edit Role</h1>

            <form method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="RoleName" class="form-control">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="submit" class="btn btn-primary" value="Update">
                        <a asp-action="GetRoles" class="btn btn-primary">Cancel</a>
                    </div>
                </div>

                <div class="card w-75 mt-sm-5">
                    <div class="card-header bg-warning">
                        <h3>Users in this role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer bg-warning">
                        <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUserInRole"
                           asp-route-roleId="@Model.Id" style="width:auto">Add or remove Users</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>