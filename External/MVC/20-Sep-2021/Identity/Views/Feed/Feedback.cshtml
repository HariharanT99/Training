@{
    ViewData["Title"] = "Feedback";
}

@model Feed

<div class="container-fluid justify-content-center offset-sm-2">
    <form method="post" asp-action="Feedback">
        <div class="row g-3 align-items-center mt-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Property" type="feedback" id="Quality" value="quality">
                <label class="form-check-label" asp-for="Property" for="feedback">Quality</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Property" type="feedback" id="Maintenance" value="maintenance">
                <label class="form-check-label" asp-for="Property" for="feedback">Maintenance</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="feedback" asp-for="Property" id="Service" value="service">
                <label class="form-check-label" asp-for="Property" for="feedback">Service</label>
            </div>
        </div>
        <div class="row g-3 align-items-center mt-3">
            <div class="col-4 col-sm-2">
                <label class="col-form-label" asp-for="Comment"></label>
            </div>
            <div class="col-8 col-sm-6">
                <textarea id="comment" class="form-control" asp-for="Password"></textarea>
            </div>
            <div class="row">
                <span class="text-danger" asp-validation-for="Comment"></span>
            </div>
        </div>
        <div class="row g-3 align-items-center mt-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Service" type="radio" name="service" id="Ok" value="ok">
                <label class="form-check-label" asp-for="Service" for="Ok">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Service" type="radio" name="service" id="Good" value="good">
                <label class="form-check-label" asp-for="Service" for="Good">2</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Service" type="radio" name="service" id="Better" value="better">
                <label class="form-check-label" asp-for="Service" for="Better">2</label>
            </div>
        </div>
        <div class="row g-3 align-items-center mt-3">
            <div>
                <input type="range" id="rating" asp-for="Rating" name="rating"
                       min="0" max="10">
                <label asp-for="Rating" for="rating">Volume</label>
            </div>
        </div>

        <div class="row g-3 align-items-center mt-3">
            <div class="stars">
                <input type="radio" id="star1" name="rating" value="1" /><input type="radio" id="star2" name="rating" value="2" /><input type="radio" id="star3" name="rating" value="3" /><input type="radio" id="star4" name="rating" value="4" /><input type="radio" id="star5" name="rating" value="5" />

                <label for="star1" aria-label="Banana">1 star</label><label for="star2">2 stars</label><label for="star3">3 stars</label><label for="star4">4 stars</label><label for="star5">5 stars</label>
            </div>
        </div>

        <div class="row g-3 align-items-center justify-content-end mt-3">
            <div class="col-8 col-sm-4">
                <input type="submit" class="btn btn-primary" value="Register" />
                <a type="button" class="btn btn-success" asp-controller="Home" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

