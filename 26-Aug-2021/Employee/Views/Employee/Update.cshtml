@{
    ViewData["Title"] = "Update";
}

@model Employee

    <form method="post" asp-for="Update">
        <input hidden asp-for="EmployeeId" />
        <div class="row g-3 justify-content-center mt-3 align-items-center">
            <div class="col-4 col-sm-2">
                <label for="name" class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-6 col-sm-4">
                <input type="text" id="name" class="form-control" asp-for="Name" placeholder="@Model.Name" />
            </div>
        </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="designation" class="col-form-label" asp-for="Designation"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="designation" class="form-control" asp-for="Designation" value="@Model.Designation">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Designation" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="age" class="col-form-label" asp-for="DepartmentId"></label>
        </div>
        <div class="col-6 col-sm-4">
            <select asp-for="DepartmentId" asp-items="@ViewBag.deptIdDropdown" class="form-control">
                <option selected="">@Model.DepartmentId</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>


    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="hiredate" class="col-form-label" asp-for="HireDate"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="date" id="hiredate" class="form-control" asp-for="HireDate" value="@Model.HireDate" placeholder="@Model.HireDate">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-end">
        <div class="col-auto">
            <input type="submit" class="btn btn-info">
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

